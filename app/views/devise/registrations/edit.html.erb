<br/>
<div class="columns">
    <div class="column"></div>
    <div class="column">
<div class="card">
<div class="card-content login">
 <p class="title">
 My Account
 </p>
 <p class="subtitle">
 Change information about my account
 </p>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input"%>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

    <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"input"%>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

    <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"input" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"input" %>
  </div>
   <hr/>
  <div class="field-body">
    <div class="field">
      <%= f.label :first_name %>
      <p class="control is-expanded has-icons-left">
        <%= f.text_field :first_name, autocomplete: "given-name", class:"input" %>
        <span class="icon is-small is-left">
          <i class="fas fa-user"></i>
        </span>
      </p>
    </div>
    <div class="field">
    <%= f.label :last_name %><br />
       <%= f.text_field :last_name, autocomplete: "family-name", class:"input" %>
    </div>
  </div>
  <br/>
    <div class="field">
      <%= f.label :street %>
        <%= f.text_field :street, autocomplete: "address-line1", class:"input" %>
    </div>
     <div class="field-body">
    <div class="field">
    <%= f.label :city %><br />
       <%= f.text_field :city, autocomplete: "address-level2", class:"input" %>
    </div>
        <div class="field">
    <%= f.label :postal_code %><br />
       <%= f.text_field :postal_code, autocomplete: "postal-code", class:"input" %>
    </div>
    </div>
  <br/>
    <div class="field">
  <p class="control has-icons-left">
    <span class="select is-fullwidth">
    <%= f.collection_select :province_id, Province.all, :id, :name %>
<%# <%= select_tag :province, options_from_collection_for_select(Province.all, 'name', 'name') %>
    </span>
    <span class="icon is-small is-left">
      <i class="fas fa-globe"></i>
    </span>
  </p>
</div>
  <div class="actions">
    <%= f.submit "Update", class:"button is-success is-fullwidth" %>
  </div>
<% end %>
<br/>
 <footer class="card-footer">
    <p class="card-footer-item">
       <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class:"button is-danger" %>
    </p>
  </footer>
  <%= link_to "<< Back", :back %>
</div>
</div>
</div>
    <div class="column"></div>
</div>


